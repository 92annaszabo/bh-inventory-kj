<form method="POST" action="/products" class="needs-validation new-products">
  <div class="form-row align-items-center">
    <div class="form-group col-md-4">
      <label for="prodName" class="col-form-label">Megnevezés:</label>
    </div>
    <div class="form-group col-md-8">
      <input type="text" class="form-control" id="prodName" name="product_name" placeholder="Termék megnevezése"
        required>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-12">
      <label for="prod_description">Termék leírása:</label>
      <textarea class="form-control" id="prod_description" name="product_desc" rows="3"></textarea>
    </div>
  </div>
  <div class="form-row align-items-center">
    <div class="form-group col-md-4">
      <label for="prodCat" class="col-form-label">Csoport:</label>
    </div>
    <div class="form-group col-md-8">
      <select class="custom-select my-1 mr-sm-2" id="prodCat" name="product_cat" multiple required>
        {{#each categories}}
        <option value="{{category_name}}">{{category_name}}</option>
        {{/each}}
      </select>
    </div>
  </div>
  <div class=" d-flex justify-content-between">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Mégsem</button>
    <button type="submit" class="btn btn-primary">Ok</button>
  </div>
</form>

<script>
  (function () {
    window.addEventListener('load', function () {
      const form = document.querySelector('.new-products');
      form.addEventListener('submit', function (event) {
        if (form.checkValidity() === false) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    }, false);
  })();
</script>