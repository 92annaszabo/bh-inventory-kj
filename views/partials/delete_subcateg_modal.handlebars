<div class="modal fade" id="delete_subcat_modal" tabindex="-1" role="dialog" aria-labelledby="delete_subcateg_title"
    aria-hidden="true">

    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header justify-content-center">
                <h5 class="modal-title" id="delete_subcateg_title">Alcsoport Törlése</h5>
            </div>
            <div class="modal-body">
                <form method="POST" class="delete-subcategories needs-validation">
                    <div class="form-row align-items-center">
                        <div class="form-group col-md-5">
                            <label for="del_categs" class="col-form-label">Válaszd ki a törölni kívánt
                                alcsoportokat:</label>
                        </div>
                        <div class="form-group col-md-7">
                            <select class="custom-select my-1 mr-sm-2" id="del_categs" name="deleted_categs" multiple
                                required>
                                {{#each categHierarchy}}
                                {{#each this.subCategories}}
                                <option value="{{this.name}}" data-parent="{{../this.name}}">{{this.name}}</option>
                                {{/each}}
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class=" d-flex justify-content-between">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Mégsem</button>
                        <button type="submit" class="btn btn-primary btn-danger">Ok</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    (function () {
        window.addEventListener('load', function () {
            const form = document.querySelector('.delete-subcategories');
            form.addEventListener('submit', function (event) {
                if (form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        }, false);
    })();
</script>